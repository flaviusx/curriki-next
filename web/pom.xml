            <xwikiCfgExo>0</xwikiCfgExo>
            <xwikiCfgDefaultBaseSkin>albatross</xwikiCfgDefaultBaseSkin>
            <xwikiCfgEncoding>UTF-8</xwikiCfgEncoding>
          </properties>
        </configuration>
